{
	"name": "logistics-platform",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
		"dev:frontend": "cd apps/front-end && npm start",
		"dev:backend": "cd apps/back-end && npm run dev",
		"build": "npm run build:frontend && npm run build:backend",
		"build:frontend": "cd apps/front-end && npm run build",
		"build:backend": "cd apps/back-end && npm run build",
		"start": "npm run start:backend",
		"start:backend": "cd apps/back-end && npm start",
		"install:all": "npm install && cd apps/front-end && npm install && cd ../back-end && npm install"
	},
	"devDependencies": {
		"concurrently": "^7.6.0"
	}
}
